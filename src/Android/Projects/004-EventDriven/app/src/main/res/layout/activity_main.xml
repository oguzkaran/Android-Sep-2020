<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/mainActivityEditTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adınızı" />

    <EditText
        android:id="@+id/mainActivityEditTextSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Soyadınız"/>

    <TextView
        android:onClick="onFullnameTextViewClicked"
        android:id="@+id/mainActivityTextViewFullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="onOKButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK" />

    <Button
        android:id="@+id/mainActivityButtonOK2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK2" />

    <Button
        android:id="@+id/mainActivityButtonOK3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK3" />

    <Button
        android:id="@+id/mainActivityButtonOK4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK4" />

    <Button
        android:onClick="onExitButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit" />
</LinearLayout>